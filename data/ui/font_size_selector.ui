<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="FontSizeSelector" parent="GtkBox">
    <property name="hexpand">True</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">12</property>
        <property name="margin-start">18</property>
        <property name="margin-end">18</property>
        <child>
          <object class="GtkButton" id="_decrease_button">
            <property name="icon-name">list-remove-symbolic</property>
            <!-- Translators: Button tooltip-->
            <property name="tooltip-text" translatable="yes">Zoom out</property>
            <property name="action-name">font-size-selector.decrease</property>
            <accessibility>
              <!-- Translators: Button -->
              <property name="label" translatable="yes">Zoom out</property>
            </accessibility>
            <style>
              <class name="circular"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="_label">
            <property name="hexpand">True</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="_increase_button">
            <property name="icon-name">list-add-symbolic</property>
            <!-- Translators: Button tooltip-->
            <property name="tooltip-text" translatable="yes">Zoom in</property>
            <property name="action-name">font-size-selector.increase</property>
            <accessibility>
              <!-- Translators: Button -->
              <property name="label" translatable="yes">Zoom in</property>
            </accessibility>
            <style>
              <class name="circular"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
