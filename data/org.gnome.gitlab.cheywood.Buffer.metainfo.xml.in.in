<component type="desktop-application">
  <id>@APPID@</id>
  <name translate="no">Buffer</name>
  <launchable type="desktop-id">@APPID@.desktop</launchable>
  <project_license>GPL-3.0-or-later</project_license>
  <metadata_license>CC0-1.0</metadata_license>
  <content_rating type="oars-1.1" />
  <!-- Translators: The application's summary / tagline -->
  <summary>Embrace ephemeral text</summary>

  <translation type="gettext">@GETTEXT_PACKAGE@</translation>

  <url type="homepage">https://gitlab.gnome.org/cheywood/buffer</url>
  <url type="bugtracker">https://gitlab.gnome.org/cheywood/buffer/-/issues</url>

  <developer id="gnome.org">
      <name translate="no">Chris Heywood</name>
  </developer>

  <requires>
    <display_length>768</display_length>
    <control>keyboard</control>
    <control>pointing</control>
  </requires>

  <kudos>
      <!--
        GNOME Software kudos:
        https://gitlab.gnome.org/GNOME/gnome-software/blob/main/doc/kudos.md
      -->
      <kudo>ModernToolkit</kudo>
      <kudo>HiDpiIcon</kudo>
  </kudos>

  <custom>
    <value key="Purism::form_factor">mobile</value>
  </custom>

  <branding>
    <color type="primary" scheme_preference="light">#f6d32d</color>
    <color type="primary" scheme_preference="dark">#873000</color>
  </branding>

  <description>
    <!-- Translators: Part of metainfo description. "Buffer" is the application name; do not translate. -->
    <p>Celebrating transience, Buffer provides a minimal editing space for all those things that don't need keeping.</p>
    <!-- Translators: Part of metainfo description. -->
    <p>Designed for keyboard workflows on desktop.</p>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://gitlab.gnome.org/cheywood/buffer/-/raw/main/data/screenshots/main.png</image>
      <!-- Translators: A screenshot description. -->
      <caption>Edit screen</caption>
    </screenshot>
    <screenshot>
      <image>https://gitlab.gnome.org/cheywood/buffer/-/raw/main/data/screenshots/preferences.png</image>
      <!-- Translators: A screenshot description. -->
      <caption>Preferences dialog</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.9.5" date="2024-08-08T00:00:00Z">
      <description translate="no">
        <p>Fixed issue in editing the buffer while searching.</p>
      </description>
    </release>
    <release version="0.9.4" date="2024-08-05T00:00:00Z">
      <description translate="no">
        <p>On small windows the visual separation between the buttons and text has been improved.</p>
      </description>
    </release>
    <release version="0.9.3" date="2024-08-04T00:00:00Z">
      <description translate="no">
        <p>The window now has a minimum width, creating a buffer with clipboard contents is fixed and right clicking no longer impacts the selection.</p>
        <p>Contributors</p>
        <ul>
          <li>Rafael Fontenelle</li>
          <li>Vlad Krupinski</li>
        </ul>
      </description>
    </release>
    <release version="0.9.2" date="2024-05-23T00:00:00Z">
      <description translate="no">
        <ul>
          <li>Allow window dragging via the button area</li>
          <li>German translation added</li>
        </ul>
        <p>Contributors</p>
        <ul>
          <li>JÃ¼rgen Benvenuti</li>
        </ul>
      </description>
    </release>
    <release version="0.9.1" date="2024-04-19T00:00:00Z">
      <description translate="no">
        <p>Changes</p>
        <ul>
          <li>Added handling of SIGINT and SIGTERM signals so that when received the (optional) emergency saves are now created before closing</li>
          <li>Added optional line numbers</li>
          <li>Made a set of paper cut tweaks relating to the line length limit and margins</li>
        </ul>
      </description>
    </release>
    <release version="0.9.0" date="2024-04-09T00:00:00Z">
      <description translate="no">
        <p>Initial release.</p>
      </description>
    </release>
  </releases>

</component>
